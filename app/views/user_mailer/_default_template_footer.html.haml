-if @edm.default_template.present? and @edm.default_template == "Template 1"
  %tr
    %td{:height => "20", :width => "600"}
  %tr{:style => "background-color:##{@edm.footer_color};color:#fff;font-size:10px;"}
    %td{:height => "80", :width => "600"}
      %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
        %tr
          %td{:width => "50"}
          %td{:width => "500"}
            %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "500"}
              %tr
                %td{:style => "text-align:right;"}
                  - if @edm.social_icons.include? 'facebook'
                    %a{:href => @edm.facebook_link,:target => "blank", :style => "display:inline-block;margin-right:10px;outline:none;"}
                      %img{:src => "#{APP_URL}/assets/fb-icon.png", :style=>"width:32px;height:32px;"}/
                  - if @edm.social_icons.include? 'twitter'
                    %a{:href => @edm.twitter_link,:target => "blank", :style => "display:inline-block;margin-right:10px;outline:none;"}
                      %img{:src => "#{APP_URL}/assets/twitter-icon.png", :style=>"width:32px;height:32px;"}/
                  - if @edm.social_icons.include? 'google_plus'
                    %a{:href => @edm.google_plus_link,:target => "blank", :style => "display:inline-block;margin-right:10px;outline:none;"}
                      %img{:src => "#{APP_URL}/assets/google-plus-icon.png", :style=>"width:32px;height:32px;"}/
                  - if @edm.social_icons.include? 'linked_in'
                    %a{:href => @edm.linkedin_link,:target => "blank", :style => "display:inline-block;margin-right:10px;outline:none;"}
                      %img{:src => "#{APP_URL}/assets/linkedin-icon.png", :style=>"width:32px;height:32px;"}/
                  - if false#@edm.social_icons.include? 'facebook'
                    %a{:href => "javascript:void(0);", :style => "display:inline-block;margin-right:10px;"}
                      %img{:src => "#{APP_URL}/assets/pinterest-icon.png", :style=>"width:32px;height:32px;"}/
          %td{:width => "50"}

