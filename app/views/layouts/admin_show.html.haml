%html
  %head
    %title Shobiz
    = stylesheet_link_tag "application", :media => 'all'
    = javascript_include_tag  "application", :media => 'all' #{}"jquery-1.11.3.min", "vendors-min", "demo-min" ,"material" ,"common"
    = csrf_meta_tags
  %body.loaded
    .demo-layout.mdl-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-header.ng-scope.mdl-js-layout.has-drawer.is-upgraded
      %header.demo-header.mdl-layout__header.mdl-color--white.mdl-color--grey-100.mdl-color-text--grey-600.is-casting-shadow
       
        .mdl-layout__header-row.mdl-color--light-blue-900
          = render :partial => 'layouts/admin_top_header'
                 
          .mdl-layout-spacer
          %button#hdrbtn.mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--icon
            %i.material-icons.mdl-color-text--white more_vert
          %ul.mdl-menu.mdl-js-menu.mdl-js-ripple-effect.mdl-menu--bottom-right{:for => "hdrbtn"}
            %li.mdl-menu__item
              = link_to 'Logout', destroy_user_session_path, :method => :get 
      .demo-drawer.mdl-layout__drawer.mdl-color-text--blue-grey-50.mdl-color--grey-900
        .wrapper
          = render :partial => 'layouts/admin_header'
      #selectclientpopup  
        %main.mdl-layout__content.mdl-color--grey-100.page.ng-scope
          %section.menus
            .mdl-color--light-blue-800.relative.clear
              .p-20
                .eventLogoDiv
                  = image_tag(@event.logo_url(:large)) rescue nil
                .displayInlineBlock
                  %h3.mdl-color-text--white.m-t-20.m-b-5.headingInfo
                    = @name
                  %p.m-t-20.headingInfo 
                    %a.editLink{:href => @path}
                      %i.material-icons edit 
          .mdl-cell--12-col.mdl-cell--12-col-tablet.mdl-cell--12-col-phone
            %div
              .mdl-tabs.mdl-js-tabs.ProfileTabLeft
                .mdl-tabs__tab-bar
                #starks-panel.mdl-tabs__panel.is-active.ml-color--shades-white.p-v-20.m-20
                  .mdl-cell--12-col.mdl-cell--12-col-tablet.mdl-cell--12-col-phone
                    .ml-card-holder
                      %div
                        %form.ng-pristine.ng-valid{:action => "#"}
                          .mdl-grid
                            .mdl-grid.mdl-cell--12-col.no-p-l.no-p-t.no-p-r.no-p-b
                              = yield