.save_button.mdl-card.mdl-shadow--1dp.agendaheight
  = form_for [:admin, @event, @emergency_exit], :builder => CustomFormBuilder do |f|
    .mdl-grid.emegencyUpload.p-b-35
      .mdl-cell--12-col.mdl-cell--12-col-tablet.ml-color--shades-white.m-8
        %h4.heading-border.p-t-10.m-b-15
          General Information
          / %a{:href => '/whats_this/emergency-exit/general_information/emergency_exit_generalInfo.jpg', :class =>'helpTag testhelp fancybox'}
          /   what's this?
      = #render :partial => "admin/layouts/whats_this_popup", :locals => {:image_name => "emergency_exit_generalInfo.jpg", :section_id => "emergency_exit_general_section"}
      = f.custom_text_field :title, "Title *","background" => "false"
      = hidden_field_tag :event_id, params[:event_id]
      = f.new_custom_file_browser_field :emergency_exit, "Emergency Exit File *( pdf/jpg/png/gif) only", :id => "uploadBtn", :value => f.object.emergency_exit_file_name, :action=> params[:action], "background" => "false"
      =# f.custom_text_field :uber_link, "Uber Link"
      = f.new_custom_file_browser_field :icon, "Icon (288x288px)(png) only", :id => "uploadBtn1", :value => f.object.icon_file_name, :action=> params[:action], "background" => "false"
    .fixed-activon-btn-new  
      = f.custom_submit_button "SAVE"
      .mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.btnsubmit.m-l-18.cancelBg
        .mdl-cell--12-col.mdl-cell--12-col-tablet.cancelbtn
          = back_button(:back)