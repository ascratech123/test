<% @list_of_zone = ActiveSupport::TimeZone.all.uniq{|e| ["GMT#{e.now.formatted_offset}"]} %>
<% if @timezone.present? and @list_of_zone.map{|e| ["GMT#{e.now.formatted_offset}",e.name]}.select{ |a| a[0] == @timezone}.present?%>
  <% @timezone = @list_of_zone.map{|e| ["GMT#{e.now.formatted_offset}",e.name]}.select{ |a| a[0] == @timezone}.first[1] %>  
  $("#event_timezone").val("<%= raw(@timezone) %>");
<% else %>
  $("#event_timezone").val("");
<% end %> 