                / -if @event.event_features.pluck(:name).include? "invitees" and !(current_user.has_role? :db_manager)
                /   = render :partial => 'admin/events/new_event_card', :locals => {:image_path => "coloured_icons/qr_scanner.png", :card_title => "QR Scanner", :feature_count => @event.registrations.present? ? '1' : '0', :manage_link => admin_event_qr_code_scanners_path(:event_id => @event.id), :new_link => admin_event_qr_code_scanners_path(:event_id => @event.id), :new_label => "Go To QR Scanner"}
                -if @event.event_features.pluck(:name).include? "invitees" and !(current_user.has_role? :db_manager)
                  = render :partial => 'admin/events/new_event_card', :locals => {:image_path => "coloured_icons/qr_scanner.png", :card_title => "QR Scanner", :feature_count => @event.registrations.present? ? '1' : '0', :manage_link => admin_event_qr_scanner_details_path(:event_id => @event.id), :new_link => admin_event_qr_scanner_details_path(:event_id => @event.id), :new_label => "Go To QR Scanner"}  
                -if !(current_user.has_any_role?(:moderator,:telecaller,:db_manager))
