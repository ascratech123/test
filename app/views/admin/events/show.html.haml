                              %h6.text-muted.truncate
                                = 'Mobile App'
                              %h2.fs30.mt5.mbn 
                                = "0"
                            - else
                              %h6.text-muted= (@event.mobile_application.present? and @event.mobile_application.marketing_app_event_id.blank? ? "Mobile App" : "Landing Page")
