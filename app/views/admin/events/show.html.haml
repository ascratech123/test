        - if true
          %section#content.table-layout.animated.fadeIn
            .chute.chute-center
              .row.smallCard
                -if false
                  .col-sm-3.col-xl-3
                    .panel.panel-tile
                      .panel-body
                        .row.pv5
                          .col-xs-5.ph10
                            = image_tag("coloured_icons/mobile-app.png")
                          .col-xs-7.pl5
