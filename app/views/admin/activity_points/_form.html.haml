.save_button.mdl-card.agendaheight
  - @event = Event.find(params[:event_id])  
  = form_for [:admin, @event, @activity_point], :builder => CustomFormBuilder do |f|
    .mdl-grid.mdl-shadow--1dp.p-b-35
      .mdl-cell--12-col.mdl-cell--12-col-tablet.ml-color--shades-white.m-8
        %h4.heading-border.p-t-10
          General Information
      = f.custom_text_field :action, "Activity Name","background" => "false"
      = f.custom_text_field :action_point, "Point","background" => "false"
      / .mdl-cell--12-col.mdl-cell--12-col-tablet.ml-color--shades-white.m-8
      /   .bs-component
      /     .form-group.timeZoneP-l-0.pl15
      /       %label.col-lg-4.control-label{:for => "_Event Start Date"} Start Activity Date
      /       = f.custom_text_field_date :start_activity_date, "Start Activity Date", :id => "date-start", :value => f.object.start_activity_date.present? ? f.object.start_activity_date.strftime('%d/%m/%Y') : ''
      /       .col-lg-3.timeDropdown
      /         .timeTab
      /           = f.custom_text_field_date :start_time_hour, " ", :class => "hours inputs is-focused", :placeholder => 'HH ', :value => get_hour_minute_second_ampm(f.object.start_activity_time, 'hour'), :col => '2',:maxlength => "2"
      /           = f.custom_text_field_date :start_time_minute, " ", :class => "minutes inputs is-focused", :placeholder => 'MM ', :value => get_hour_minute_second_ampm(f.object.start_activity_time, 'minute'), :col => '2',:maxlength => "2"
      /           = f.custom_text_field_date :start_time_am, " ", :class => "ampm inputs is-focused", :placeholder => 'AM/PM', :value => get_hour_minute_second_ampm(f.object.start_activity_time, 'ampm'), :col => '3',:maxlength => "2"
      / .mdl-cell--12-col.mdl-cell--12-col-tablet.ml-color--shades-white.m-8
      /   .bs-component
      /     .form-group.timeZoneP-l-0.pl15
      /       %label.col-lg-4.control-label{:for => "_Event Start Date"} End Activity Date
      /       = f.custom_text_field_date :end_activity_date, "End Activity Date", :id => "date-start", :value => f.object.end_activity_date.present? ? f.object.end_activity_date.strftime('%d/%m/%Y') : ''
      /       .col-lg-3.timeDropdown
      /         .timeTab
      /           = f.custom_text_field_date :end_time_hour, " ", :class => "hours inputs is-focused", :placeholder => 'HH ', :value => get_hour_minute_second_ampm(f.object.end_activity_time, 'hour'), :col => '2',:maxlength => "2"
      /           = f.custom_text_field_date :end_time_minute, " ", :class => "minutes inputs is-focused", :placeholder => 'MM ', :value => get_hour_minute_second_ampm(f.object.end_activity_time, 'minute'), :col => '2',:maxlength => "2"
      /           = f.custom_text_field_date :end_time_am, " ", :class => "ampm inputs is-focused", :placeholder => 'AM/PM', :value => get_hour_minute_second_ampm(f.object.end_activity_time, 'ampm'), :col => '3',:maxlength => "2"
      .mdl-cell--12-col.mdl-cell--12-col-tablet.ml-color--shades-white.m-8
        .bs-component
          .form-group.timeZoneP-l-0.yesNo
            %label.col-lg-4.control-label{:for => "_Event Start Date"} One Time
            = f.custom_radio_button :one_time_only, true, "Yes", :id => "option-1"
            = f.custom_radio_button :one_time_only, false, "No", :id => "option-2"
    .fixed-activon-btn-new  
      = f.custom_submit_button "SAVE"
      .mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.btnsubmit.m-l-18.cancelBg
        .mdl-cell--12-col.mdl-cell--12-col-tablet.cancelbtn
          = back_button(:back)