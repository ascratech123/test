.save_button.mdl-card.editBadgeForm.back-transparent 
  = form_for [:admin, @event, @poll_wall], :builder => CustomFormBuilder, :html => { :multipart => true } do |f|
    .mdl-grid.mdl-card.mdl-shadow--1dp
      .mdl-cell--12-col.mdl-cell--12-col-tablet.ml-color--shades-white.m-8
        %h4.heading-border.p-t-10
          Logo
          %span.editThemelinks  
        = f.new_custom_file_browser_field "logo", "Poll Wall logo (1280x300px) png only ", :id => "uploadBtn1", :value => (params[:action] == "create" and @poll_wall.present?) ? @poll_wall.logo_file_name : @poll_wall.logo_file_name, :action => params[:action], :view_popup => {:image_path => "a.jpg", :rel=> "event_listing_logo", :title => "Event Listing Logo"}
        - if f.object.logo_file_name.present? 
          .col-lg-1
            - if @poll_wall.logo.present?
              = link_to admin_event_poll_wall_path(:event_id => @event.id, :id => @poll_wall.id,:remove_logo_image => true), :class => "themeclose positionclose delete-wall-logo", :method => "put",data: { confirm: 'Are you sure?' } do
                %span
                  X          
    .mdl-grid.mdl-card.mdl-shadow--1dp.m-t-40.p-b-35
      .mdl-cell--12-col.mdl-cell--12-col-tablet.ml-color--shades-white.m-8
        %h4.heading-border.p-t-10
          Backgrounds
          %span.editThemelinks  
      .mdl-cell--12-col.mdl-cell--12-col-tablet.ml-color--shades-white.allcp-form.m-8.m-b-15
        .bs-component
          .form-group
            .span.col-lg-4
              = f.label "Background Image (1600x900px) png only *",:class =>"control-label", style: "float: right;"
            .col-lg-7.Closetheme
              %label.field.file
                %span.button.btn-primary
                  Choose File 
                = f.file_field :background_image,:id => "uploadBtn2", :class=>"gui-file"
                = text_field_tag("text_file_name","", id: "1uploadBtn2", class: "gui-input", :value => "#{f.object.background_image_file_name.nil? ? "there is no Attachment Available !" : f.object.background_image_file_name}", :read_only => true)
            - if f.object.background_image_file_name.present? 
              .col-lg-1
                = link_to "?" ,"/whats_this/look_and_feel/backgrounds/Help_Look&Feel_BackgroundImage.jpg", rel: "event_bg_image", title: "Event Background Image", :class =>'fancybox whatsImg'
                = link_to admin_event_poll_wall_path(:event_id => @event.id, :id => @poll_wall.id,:remove_bg_image => true), :class => "themeclose positionclose", :method => "put",data: { confirm: 'Are you sure?' } do
                  %span
                    X

      %p.OrTxt.or-vertical-text
        or
      = f.custom_text_field :background_color, "Background Color *", :value => @poll_wall.background_color, :class => 'pick-a-color', :view_popup => {:image_path => "a.jpg", :rel=> "background_color", :title => "Background Color"}, :admin_theme => "#{(@poll_wall.background_color.present?) ? "has-success" : ""}" 
    .mdl-grid.mdl-card.mdl-shadow--1dp.m-t-40.p-b-35
      .mdl-cell--12-col.mdl-cell--12-col-tablet.ml-color--shades-white.m-8
        %h4.heading-border.p-t-10
          Font Color
          %span.editThemelinks  
      %p.OrTxt
      = f.custom_text_field :font_color, "Font Color", :value => @poll_wall.font_color, :class => 'pick-a-color', :view_popup => {:image_path => "a.jpg", :rel=> "background_color", :title => "Background Color"}, :admin_theme => "#{(@poll_wall.font_color.present?) ? "has-success" : ""}"
    .mdl-grid.mdl-card.mdl-shadow--1dp.m-t-40.p-b-35
      .mdl-cell--12-col.mdl-cell--12-col-tablet.ml-color--shades-white.m-8
        %h4.heading-border.p-t-10
          Options Bar Color
          %span.editThemelinks  
      %p.OrTxt
      = f.custom_text_field :bar_color, "Options Bar Color *", :value => @poll_wall.bar_color, :class => 'pick-a-color', :view_popup => {:image_path => "a.jpg", :rel=> "background_color", :title => "Background Color"}, :admin_theme => "#{(@poll_wall.bar_color.present?) ? "has-success" : ""}"
    .mdl-grid.mdl-card.mdl-shadow--1dp.m-t-40.p-b-35
      .mdl-cell--12-col.mdl-cell--12-col-tablet.ml-color--shades-white.m-8
        %h4.heading-border.p-t-10
          Options Bar Color
          %span.editThemelinks  
      %p.OrTxt
      = f.custom_text_field :bar_color1, "Options Bar Color *", :value => @poll_wall.bar_color1, :class => 'pick-a-color', :view_popup => {:image_path => "a.jpg", :rel=> "background_color", :title => "Background Color"}, :admin_theme => "#{(@poll_wall.bar_color1.present?) ? "has-success" : ""}"
               
      = f.hidden_field :event_id,:value=>params[:event_id]                
      .fixed-activon-btn-new  
        = f.custom_submit_button "SAVE"
        - if current_user.has_role? :super_admin
          .mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.btnsubmit.m-l-18.cancelBg
            .mdl-cell--12-col.mdl-cell--12-col-tablet.cancelbtn
              = back_button(:back)
        - elsif @event.present? and @event.mobile_application.id.present?
          .mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.btnsubmit.m-l-18.cancelBg
            .mdl-cell--12-col.mdl-cell--12-col-tablet.cancelbtn
              = link_to admin_event_mobile_application_path(:event_id => @event.id, :id => @event.mobile_application.id) do
                %span.waves-effect.waves-light.btn
                  CANCEL
= javascript_include_tag "jquery-1.11.3.min", "pick-a-color-1.2.0.min", "tinycolor", "jquery.fancybox", "theme_color_pick"                   
 